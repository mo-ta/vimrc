include "109.mayu"	# 109 キーボードを 104 キーボード風に

keymap Global

#=======OneShot Mod====================================
mod Shift += !!Space   #SandS
#capslock -> control
mod Control += 英数
key *英数 = *LControl
mod Control += !!Colon #:をCtrlに

mod mod0 += !!無変換
mod mod0 += !!変換

key *IC-*M0-*変換 =  *&SetImeStatus(toggle)
key *IC-*M0-無変換 = *&SetImeStatus(off) *Escape

key M0-q = &LoadSetting # 設定ファイルの読み込み

key *IC-M0-h = *&WindowMove(-10,0)
key *IC-M0-k = *&WindowMove(0,-10)
key *IC-M0-j = *&WindowMove(0,10)
# key *IC-M0-l = *&WindowMove(10,0)
key *IC-M0-O = A-TAB
key *IC-M0-I = A-S-TAB
key *IC-M0-T = *&WindowClingToTop
key *IC-M0-B = *&WindowClingToBottom
key *IC-M0-V = *&WindowHMaximize
key *IC-M0-S = *&WindowVMaximize
key *IC-M0-M = *&WindowMaximize
key *IC-M0-R = *&LoadSetting

key *IC-C-M0-h = S-LEFT

key *IC-C-M0-k = S-UP
key *IC-C-M0-j = S-DOWN
key *IC-C-M0-l = S-RIGHT




key C-m = ENTER
key C-i = TAB 
key C-h = BACKSPACE 
